.chat-side
  .side-header
    .side-header__name
      = current_user.name
    .side-header__icon
      =link_to new_group_path, class: "side-header__icon side-header__icon--edit" do
        =fa_icon "edit"
      =link_to edit_user_path(current_user), class: "side-header__icon side-header__icon--gear" do
        =fa_icon "cog"

  .groups
    - current_user.groups.each do |group|
      = render partial: "layouts/group", locals: { group: group }
