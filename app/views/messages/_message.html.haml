.messages__message
  .messages__message__post
    .messages__message__post__user
      = message.user.name
    .messages__message__post__time 
      = message.created_at.strftime("%Y/%m/%d(%a) %H:%M:%S")
  .messages__message__whole
    - if message.content.present?
      .messages__message__whole__text
        = message.content
    = image_tag message.image.url, class: "messages__message__whole__image" if message.image.present?

